{
  "name": "@universal/playwright-framework",
  "version": "1.0.0",
  "description": "Universal, plug-and-play Playwright E2E testing framework for any web application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome",
    "test:parallel": "playwright test --workers=4",
    "report": "playwright show-report",
    "report:allure": "allure serve allure-results",
    "clean": "rimraf dist reports screenshots test-results",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "automation",
    "framework",
    "typescript",
    "page-object-model",
    "universal",
    "generic",
    "reusable",
    "submodule"
  ],
  "author": "Universal Testing Framework Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/universal-testing/playwright-framework.git"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "allure-playwright": "^2.10.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-playwright": "^0.18.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.0",
    "faker": "^6.6.6"
  },
  "files": [
    "dist",
    "config",
    "src",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
